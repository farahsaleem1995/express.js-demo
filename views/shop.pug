extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    h1 Products
    if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src="https://images.pexels.com/photos/1002655/pexels-photo-1002655.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940", alt="Book")
            .card__content
              h2.product__price $19.99
              p.product__description A very interesting book
            .card__action
              button.btn Add to cart
    else
      p No products
      